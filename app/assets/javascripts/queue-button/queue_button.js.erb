function makeFakeQueueButton (buttonID, signupLinkID) {
  var obj = this;
  $("#" + buttonID).click (function (evt) {
    obj.oldURL = $("#" + signupLinkID).attr ("href");
    $("#" + signupLinkID).attr ("href", obj.oldURL + ((obj.oldURL.indexOf('?')!=-1)?'&':'?') +
                                "special_message=" + encodeURI ("Register an account before you Doge"));
    $("#" + signupLinkID).click ();
    $("#" + signupLinkID).attr ("href", obj.oldURL);
  });
};

function makeQueueButton (buttonID) {
  var obj = this;

  obj.queueLoader = new ContainerLoader (null, "/doge_enqueue", "GET", null,
                                         "queue_container", "doge_queue_container",
                                         "buttonContainer", function () {alert("Successful Queue?");});

  $("#" + buttonID).click (obj.queueLoader.openContainer);
}
