<div id="login_form_container" class="form_container">
  <div id="login_box" class="form_box">
    <%= image_tag "exit_normal.png", id: "exit_button",
                   draggable: "false" %>
    <p id="login_title" class="form_title">So Login, Much Doge</p>
    <div id="login_info" class="form_info">
      <%= form_for :login, remote: true, html: {id: "login_form"} do |f| %>
        <div class="form_input_container">
          <%= f.label :username, id: "username_label", class: "form_label" %>
          <%= f.text_field :username, class: "form_input" %>
        </div>
        <div class="form_input_container">
          <%= f.label :password, id: "password_label", class: "form_label" %>
          <%= f.password_field :password, class: "form_input" %>
        </div>
        <% if flash[:login_error] %>
          <div id="login_error" class="error form_error"><%= sanitize flash[:login_error] %></div>
        <% end %>
        <div id="underline" class="underline"></div>
        <%= image_tag "doge_face_thumb.png", id: "login_form_doge_img", class: "hori-center form_img" %>
        <div id="login_submit_container" class="form_input_container">
          <%= f.submit "Login", class: "form_submit hori-center", id: "login_form_submit" %>
        </div>
      <% end %>
    </div>
  </div>
  <%= javascript_include_tag "exit-button-bundle" %>
  <%= javascript_include_tag "login-form-bundle" %>
  <script>
    var exitButton = new makeExitButton ("exit_button", "login_form_container",
                                         "<%= asset_path('exit_normal.png') %>",
                                         "<%= asset_path('exit_highlight.png') %>",
                                         "<%= asset_path('exit_pressed.png') %>");
    exitButton.bindClick (function () {
      $("#ls_form_container").css ("display", "none");
    });
  </script>
  <div id="preload_login_form" class="form_preload">
    <%= image_tag "exit_highlight.png", height: "1px", width: "1px" %>
    <%= image_tag "exit_pressed.png", height: "1px", width: "1px" %>
  </div>
</div>
